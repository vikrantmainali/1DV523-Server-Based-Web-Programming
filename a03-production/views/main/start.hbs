<h1>Gitlab Webhook</h1>

  <div id="listOfIssues">
        <h3>Issues</h3>
        <ul id = "issues" class="list">
            {{#each issues}}
            <li class="issue" id="{{id}}">
                <div id="ribbon">
                    <h4 id="title">Title: {{title}}</h4>
                    <span class="body">Description: {{description}}</span>
                    <br>
                    <a href="{{link}}">Link to issue</a>
                    <p id = "comments">Comments: {{comments}}</p>
                    <p id = "author">Author: {{author}}</p>
                    <p id = "createdAt">Created at: {{created_at}}</p>
                    <p id = "updatedAt">Updated at: {{updated_at}}</p>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>

    <div id="notificationList">
        <h3>Notifications</h3>
        <ul id="messages"></ul>
    </div>